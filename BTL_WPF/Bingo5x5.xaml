        <Button x:Name="click" Width="98" Height="40" Content="Roll" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="click_Click" Background="#FF6BF027" Margin="275,0,0,58" FontWeight="Bold" FontSize="20"></Button>
        <Button x:Name="click1" Width="60" Height="40" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="#FF2656ED" Margin="416,0,0,10" FontWeight="Bold" FontSize="20" Click="click1_Click" Foreground="#FFE8DBDB"></Button>
    </Grid>
</Window>